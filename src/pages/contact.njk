      {# Contact Form #}
      <div class="lg:col-span-2" data-reveal>
        <div class="bg-white rounded-2xl border border-warm-border p-8 lg:p-10">
          <h2 class="text-xl font-medium text-warm-black tracking-[-0.02em] mb-6">Send Us a Message</h2>

          <form class="space-y-6" x-data="{ name: '', email: '', company: '', budget: '', message: '' }">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {# Name #}
              <div>
                <label for="name" class="block text-sm font-medium text-warm-charcoal mb-2">Your Name *</label>
                <input type="text" id="name" x-model="name" class="w-full px-4 py-3 rounded-xl bg-warm-surface border border-warm-border text-warm-charcoal placeholder:text-warm-400 focus:border-warm-charcoal focus:ring-2 focus:ring-warm-charcoal/10 outline-none transition-all" placeholder="Your name" required>
              </div>

              {# Email #}
              <div>
                <label for="email" class="block text-sm font-medium text-warm-charcoal mb-2">Email Address *</label>
                <input type="email" id="email" x-model="email" class="w-full px-4 py-3 rounded-xl bg-warm-surface border border-warm-border text-warm-charcoal placeholder:text-warm-400 focus:border-warm-charcoal focus:ring-2 focus:ring-warm-charcoal/10 outline-none transition-all" placeholder="you@example.com" required>
              </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              {# Company #}
              <div>
                <label for="company" class="block text-sm font-medium text-warm-charcoal mb-2">Company</label>
                <input type="text" id="company" x-model="company" class="w-full px-4 py-3 rounded-xl bg-warm-surface border border-warm-border text-warm-charcoal placeholder:text-warm-400 focus:border-warm-charcoal focus:ring-2 focus:ring-warm-charcoal/10 outline-none transition-all" placeholder="Your Company">
              </div>

              {# Budget #}
              <div>
                <label for="budget" class="block text-sm font-medium text-warm-charcoal mb-2">Budget Range</label>
                <select id="budget" x-model="budget" class="w-full px-4 py-3 rounded-xl bg-warm-surface border border-warm-border text-warm-charcoal focus:border-warm-charcoal focus:ring-2 focus:ring-warm-charcoal/10 outline-none transition-all">
                  <option value="">Select a range</option>
                  <option value="10k-25k">$10,000 - $25,000</option>
                  <option value="25k-50k">$25,000 - $50,000</option>
                  <option value="50k-100k">$50,000 - $100,000</option>
                  <option value="100k+">$100,000+</option>
                </select>
              </div>
            </div>

            {# Message #}
            <div>
              <label for="message" class="block text-sm font-medium text-warm-charcoal mb-2">Project Details *</label>
              <textarea id="message" x-model="message" rows="5" class="w-full px-4 py-3 rounded-xl bg-warm-surface border border-warm-border text-warm-charcoal placeholder:text-warm-400 focus:border-warm-charcoal focus:ring-2 focus:ring-warm-charcoal/10 outline-none transition-all resize-none" placeholder="Tell us about your project, goals, and timeline..." required></textarea>
            </div>

            {# Submit #}
            <div class="flex items-center justify-between gap-4">
              <p class="text-sm text-warm-400">* Required fields</p>
              <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 bg-zunkiree-600 text-white font-medium rounded-full hover:bg-zunkiree-700 transition-all duration-200 hover:-translate-y-0.5">
                Send Message
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>
